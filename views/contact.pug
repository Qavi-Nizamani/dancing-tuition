extends base.pug

block style 
    style 
        include ../static/css/style.css 
        include ../static/css/contactStyle.css 
block content 
    section#introSection.container
        h1 Contact Form
        form(action="/contact", method="post" id="myForm") 
            input(type="text" name="name" id="name" placeholder="Enter Your Name.")
            input(type="text" name="name" id="name" placeholder="Enter Your Phone Number.")
            input(type="text" name="name" id="name" placeholder="Enter Your Email Id.")
            input(type="text" name="name" id="name" placeholder="Enter Your Address.")
            input(type="text" name="name" id="name" placeholder="Enter Your Concern.")
            button(type="submit") Submit

